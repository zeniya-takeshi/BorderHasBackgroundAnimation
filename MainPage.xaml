<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BorderHasBackgroundAnimation.MainPage">
    <AbsoluteLayout>
        <Border AbsoluteLayout.LayoutBounds="10, 10, 200, 200"
                x:Name="TheBorder"
                StrokeShape="Rectangle"
                StrokeThickness="0"
                BackgroundColor="Red" />

        <Frame AbsoluteLayout.LayoutBounds="10, 220, 200, 200" 
               x:Name="TheFrame"
               CornerRadius="0"
               HasShadow="False"
               BorderColor="Red"
               BackgroundColor="Red" />

        <!--Same Result-->
