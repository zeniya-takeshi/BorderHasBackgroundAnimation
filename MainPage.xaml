                x:Name="TheBorder"
                WidthRequest="200"
                HeightRequest="200"
                StrokeShape="Rectangle"
                StrokeThickness="0"
                BackgroundColor="Red" />

        <Frame AbsoluteLayout.LayoutBounds="10, 220, AutoSize, AutoSize" 
               x:Name="TheFrame"
               WidthRequest="200"
               HeightRequest="200"
               CornerRadius="0"
               HasShadow="False"
               BorderColor="Red"
               BackgroundColor="Red" />-->

        <Button AbsoluteLayout.LayoutBounds="230, 20, 70, 180"
                Text="Border"
                Clicked="OnBorderChanged"
                BackgroundColor="SkyBlue" />

        <Button AbsoluteLayout.LayoutBounds="230, 230, 70, 180"
                Text="Frame"
                Clicked="OnFrameChanged"
                BackgroundColor="Orange" />
    </AbsoluteLayout>
</ContentPage>

